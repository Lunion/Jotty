<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlTopSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_length"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_toLeftOf="@+id/swExpenseIncome"
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <Switch
            android:id="@+id/swExpenseIncome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_length"
            android:layout_alignBottom="@+id/etAmount"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:checked="false"
            android:textOff="@string/expense"
            android:textOn="@string/income"
            android:thumb="@drawable/income_expense_switch" />


        <Button
            android:id="@+id/btDatePicker"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/touchables_min_length"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/swExpenseIncome"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:text="@string/date_picker_placeholder" />

        <EditText
            android:hint="Description"
            android:id="@+id/etDescription"
            android:layout_below="@+id/btDatePicker"
            android:layout_width="fill_parent"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_height="@dimen/touchables_min_length" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlBottomSection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rlTopSection">

        <ListView
            android:id="@+id/lvCategoryPicker"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_above="@+id/rlCategorySearch"
            android:layout_alignParentTop="true">

        </ListView>

        <RelativeLayout
            android:id="@+id/rlCategorySearch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_length"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/etCategorySearch"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/touchables_min_length"
                android:hint="@string/choose_category"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/touchables_min_length"
                android:background="@android:color/white"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/ibCategoryAdd"
                android:layout_width="@dimen/touchables_min_length"
                android:layout_height="fill_parent"
                android:layout_alignRight="@+id/etCategorySearch"
                android:layout_centerVertical="true"
                android:background="@drawable/imagebutton_highlight"
                android:src="@drawable/ic_action_send_now" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
