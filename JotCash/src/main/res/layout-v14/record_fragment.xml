<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlTopSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_toLeftOf="@+id/swExpenseIncome"
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <Switch
            android:id="@+id/swExpenseIncome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_alignBottom="@+id/etAmount"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:checked="false"
            android:textOff="@string/expense"
            android:textOn="@string/income"
            android:thumb="@drawable/income_expense_switch" />

        <RadioGroup
            android:id="@+id/rgDate"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_below="@+id/etAmount"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbYesterday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_weight="1"
                android:text="@string/yesterday" />

            <RadioButton
                android:id="@+id/rbToday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/today" />

            <RadioButton
                android:id="@+id/rbCustom"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_weight="1"
                android:text="@string/custom" />

        </RadioGroup>

        <Button
            android:id="@+id/btDatePicker"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rgDate"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:text="@string/date_picker_placeholder" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlBottomSection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rlTopSection">

        <ListView
            android:layout_alignParentTop="true"
            android:id="@+id/lvCategoryPicker"
            android:layout_above="@+id/rlCategorySearch"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

        </ListView>

        <RelativeLayout
            android:id="@+id/rlCategorySearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/etCategorySearch"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_marginBottom="@dimen/vertical_margin_min"
                android:layout_marginTop="@dimen/vertical_margin_min"
                android:hint="@string/choose_category"
                android:paddingRight="@dimen/edit_text_padding"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/ibCategoryAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/etCategorySearch"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/vertical_margin_min"
                android:layout_marginTop="@dimen/vertical_margin_min"
                android:background="@drawable/ic_action_send_now" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
