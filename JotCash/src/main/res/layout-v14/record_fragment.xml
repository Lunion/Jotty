<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlTopSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAmount"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/swExpenseIncome"
            android:hint="@string/amount" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:id="@+id/swExpenseIncome"
            android:layout_alignBottom="@+id/etAmount"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textOn="@string/income"
            android:textOff="@string/expense"
            android:checked="false"
            android:thumb="@drawable/income_expense_switch" />

        <RadioGroup
            android:id="@+id/rgDate"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:layout_below="@+id/etAmount"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_weight="1"
                android:text="@string/yesterday"
                android:id="@+id/rbYesterday" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/today"
                android:id="@+id/rbToday" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_weight="1"
                android:text="@string/custom"
                android:id="@+id/rbCustom" />

        </RadioGroup>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_marginBottom="@dimen/vertical_margin_min"
            android:text="@string/date_picker_placeholder"
            android:id="@+id/btDatePicker"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rgDate" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlBottomSection"
        android:layout_below="@+id/rlTopSection"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp">


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_min"
            android:layout_above="@+id/rlChooseCategory"
            android:id="@+id/lvCategory"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/rlChooseCategory"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/touchables_min_height"
                android:layout_marginTop="@dimen/vertical_margin_min"
                android:layout_marginBottom="@dimen/vertical_margin_min"
                android:hint="@string/choose_category"
                android:id="@+id/etChooseCategory"
                android:paddingRight="@dimen/edit_text_padding"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/ibAddCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_min"
                android:layout_marginBottom="@dimen/vertical_margin_min"
                android:layout_alignRight="@+id/etChooseCategory"
                android:background="@drawable/ic_action_send_now"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
