<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/touchables_min_height"
        android:layout_marginTop="@dimen/vertical_margin_min"
        android:layout_marginBottom="@dimen/vertical_margin_min"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/switch1"
        android:hint="@string/amount" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="@dimen/touchables_min_height"
        android:layout_marginTop="@dimen/vertical_margin_min"
        android:layout_marginBottom="@dimen/vertical_margin_min"
        android:id="@+id/switch1"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textOn="@string/income"
        android:textOff="@string/expense"
        android:checked="false"
        android:thumb="@drawable/income_expense_switch" />

    <RadioGroup
        android:id="@+id/rgDate"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/touchables_min_height"
        android:layout_marginTop="@dimen/vertical_margin_min"
        android:layout_marginBottom="@dimen/vertical_margin_min"
        android:layout_below="@+id/editText"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_weight="1"
            android:text="@string/yesterday"
            android:id="@+id/rbYesterday" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/today"
            android:id="@+id/rbToday" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touchables_min_height"
            android:layout_weight="1"
            android:text="@string/custom"
            android:id="@+id/rbCustom" />

    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/touchables_min_height"
        android:layout_marginTop="@dimen/vertical_margin_min"
        android:layout_marginBottom="@dimen/vertical_margin_min"
        android:text="@string/date_picker_placeholder"
        android:id="@+id/btDatePicker"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rgDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_min"
        android:layout_marginBottom="@dimen/vertical_margin_min"
        android:text="@string/choose_category"
        android:id="@+id/tvChooseCategory"
        android:layout_below="@+id/btDatePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_min"
        android:layout_marginBottom="@dimen/vertical_margin_min"
        android:layout_alignParentBottom="true"
        android:id="@+id/lvCategory"
        android:layout_below="@+id/tvChooseCategory"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
